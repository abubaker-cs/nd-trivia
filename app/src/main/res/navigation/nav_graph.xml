<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/titleFragment"
    >
    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.android.navigation.ui.TitleFragment"
        android:label="TitleFragment"
        tools:layout="@layout/fragment_title"
        >
        <action
            android:id="@+id/onboarding_to_gamePlay"
            app:destination="@id/gameFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.android.navigation.ui.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game"
        >
        <action
            android:id="@+id/gamePlay_to_gameWon"
            app:destination="@id/gameWonFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            />
        <action
            android:id="@+id/gamePlay_to_gameOver"
            app:destination="@id/gameOverFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/titleFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/gameOverFragment"
        android:name="com.example.android.navigation.ui.GameOverFragment"
        android:label="fragment_game_over"
        tools:layout="@layout/fragment_game_over"
        >
        <action
            android:id="@+id/gameOver_to_gamePlay"
            app:destination="@id/gameFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/titleFragment"
            app:popUpToInclusive="false"
            />
    </fragment>
    <fragment
        android:id="@+id/gameWonFragment"
        android:name="com.example.android.navigation.ui.GameWonFragment"
        android:label="fragment_game_won"
        tools:layout="@layout/fragment_game_won"
        >
        <action
            android:id="@+id/gameWon_to_gamePlay"
            app:destination="@id/gameFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/titleFragment"
            />
        <argument
            android:name="numQuestions"
            app:argType="integer"
            />
        <argument
            android:name="numCorrect"
            app:argType="integer"
            />
    </fragment>
    <fragment
        android:id="@+id/about"
        android:name="com.example.android.navigation.ui.AboutFragment"
        android:label="@string/title_about_trivia"
        tools:layout="@layout/fragment_about"
        />
    <fragment
        android:id="@+id/rulesFragment"
        android:name="com.example.android.navigation.ui.RulesFragment"
        android:label="fragment_rules"
        tools:layout="@layout/fragment_rules"
        />
</navigation>